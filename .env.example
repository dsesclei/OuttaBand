# Telegram configuration
TELEGRAM_BOT_TOKEN=changeme
TELEGRAM_CHAT_ID=123456789
TELEGRAM_ENABLED=false

# Meteora pool settings
METEORA_PAIR_ADDRESS=changeme
METEORA_BASE_URL=https://dlmm-api.meteora.ag

# Scheduler cadence and cooldown windows (minutes)
CHECK_EVERY_MINUTES=15
COOLDOWN_MINUTES=60

# Persistence and logging
DB_PATH=/data/app.db
OUTTABAND_LOG_LEVEL=INFO

# HTTP fingerprints
HTTP_UA_MAIN=outtaband/0.1 (+https://github.com/dsesclei/OuttaBand)
HTTP_UA_VOL=outtaband-volatility/0.1 (+https://github.com/dsesclei/OuttaBand)

# Volatility fetch (Binance)
BINANCE_BASE_URL=https://api.binance.us # .com blocked inside US
BINANCE_SYMBOL=SOLUSDT
VOL_CACHE_TTL_SECONDS=60
VOL_MAX_STALE_SECONDS=7200

# Scheduling timezone and daily advisory
LOCAL_TZ=America/New_York
DAILY_LOCAL_HOUR=8
DAILY_LOCAL_MINUTE=0
DAILY_ENABLED=true

# Advisory policy toggles
INCLUDE_A_ON_HIGH=false

